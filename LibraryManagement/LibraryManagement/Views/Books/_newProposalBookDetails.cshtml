@using Newtonsoft.Json

@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    ViewBag.Title = "_newProposalBookDetails";
}

<div class="container-fluid">
    <div class="row" style="padding: 20px; margin-top: 55px;">
        <div style="margin-bottom: 10px;font-weight: bold;">Books proposal Details</div>
        <div id="newproposalBook"></div>
    </div>
</div>

    <script>
    $(function() {
        var bookdetailsList = @Html.Raw(JsonConvert.SerializeObject(ViewBag.BookDetails));
        bookdetailsList = ej.parseJSON(bookdetailsList);

        $("#newproposalBook")
           .ejGrid({
               dataSource: bookdetailsList,
               allowPaging: true,
               pageSettings: { pageSize: 3 },
               allowSelection: false,
               allowSorting: true,
               contextMenuSettings: { enableContextMenu: false },
               allowFiltering: true,
               filterSettings: { filterType: "excel" },
               allowResizing: true,
               allowEditing: false,
               allowScrolling: false,
               enableTouch: false,
               enableAltRow: true,
               load:window.GridToolTipBehavior,
               columns: [
                   {
                       headerText: "Book Name",
                       field: "BookName",
                       type: "string",
                       textAlign: ej.TextAlign.Left,
                       width: 70,
                   },
                   {
                       headerText: "Category Name",
                       field: "CategoryName",
                       type: "string",
                       textAlign: ej.TextAlign.Left,
                       width: 70,
                   },
                   {
                       headerText: "Author Name",
                       field: "AuthorName",
                       type: "string",
                       textAlign: ej.TextAlign.Left,
                       width: 70,
                   },
                   {
                       headerText: "User Name",
                       field: "UserName",
                       type: "string",                      
                       textAlign: ej.TextAlign.Left,
                       width: 40,
                   },
                   {
                       headerText: "Proposed Date",
                       field: "ProposedDate",
                       format: "{0:d MMM yyyy}",
                       textAlign: ej.TextAlign.Left,
                       width: 40,
                   },
                    {
                        headerText: "Status",
                        field: "Status",
                        type: "string",
                        textAlign: ej.TextAlign.Left,
                        width: 70,
                    }
               ]
           });

    });
    </script>
