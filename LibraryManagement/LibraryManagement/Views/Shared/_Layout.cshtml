@using System.Collections.Generic;
@using System.Web.Optimization;

<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - Library Management</title>
    <style>
    #sitelayout {
    margin: 0 0 0 189px;
    padding-top: 0;
}
    </style>
</head>
<body>

<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">
<link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css">
@Styles.Render("~/styles/bootstrap")
@Styles.Render("~/ejControls/themes/ej")
@Scripts.Render("~/scripts/jqueries")
@Scripts.Render("~/scripts/ej")
<script type="text/template" id="gridColumnTooltip">
        {{:value }}
    </script>
    <script>
    function GridToolTipBehavior() {
    var columns = this.model.columns;
    for (var i = 0; i < columns.length; i++) {
    columns[i].clipMode = "ellipsiswithtooltip";
    columns[i].tooltip = "#gridColumnTooltip"
    }
    }
    </script>
<div id="layoutwrapper">
    <div id="UserEmail" class="hide">@ViewBag.UserEmail</div>
    <div id="UserName" class="hide">@ViewBag.UserName</div>
    <div id="UserId" class="hide">@ViewBag.UserId</div>
    <div id="UserRole" class="hide">@ViewBag.Role</div>
        @Html.Partial("~/Views/Shared/_LeftSideMenu.cshtml")
        <div class="gray-bg " id="page-wrapper" style="min-height: 238px;">

            <div id="sitelayout" class="animated fadeInRight">
                <div>
                    @Html.Partial("~/Views/Shared/_TopMenu.cshtml")
                </div>
                @RenderBody()
            </div>
        </div>
        <a href="javascript:void(0);" id="scroll-to-top" title="Scroll to Top" style="display: none;">
            <i class="fa fa-angle-up"></i>
        </a>
    </div>

</body>
</html>